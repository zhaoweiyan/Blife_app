<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp60"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_refund_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp19"
        android:layout_marginRight="@dimen/dp34"
        android:background="@mipmap/refund_schduel_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp2">

        <TextView
            android:id="@+id/tv_refund_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/creattime"
            android:textColor="@color/color_user_agreement"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_refund_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:text="@string/adv_handle_explain"
            android:textColor="@color/color_user_agreement"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>
</LinearLayout>