<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BackgroundTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/base_topbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/superbonus_background"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/superbonus_flower" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70dp"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@mipmap/superbonus_top_icon" />

                            <TextView
                                android:id="@+id/tv_superbonus_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|end"
                                android:paddingBottom="5dp"
                                android:paddingRight="10dp"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="182dp"
                            android:layout_marginLeft="23dp"
                            android:layout_marginRight="23dp"
                            android:background="@mipmap/superbonus_calendar_frame">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginBottom="16dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="38dp"
                                android:background="@mipmap/superbonus_calendar_frame_small">

                                <TextView
                                    android:id="@+id/tv_superbonus_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="10dp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxEms="8"
                                    android:maxLines="2"
                                    android:textColor="@color/color_reset"
                                    android:textSize="@dimen/sp_13"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_superbonus_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:shadowColor="@color/colorgray"
                                    android:shadowDx="5"
                                    android:shadowDy="5"
                                    android:shadowRadius="3"
                                    android:textColor="@color/colorRedLoginNormal"
                                    android:textSize="@dimen/sp_30" />

                                <TextView
                                    android:id="@+id/tv_superbonus_mans"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:layout_marginBottom="8dp"
                                    android:gravity="center"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/sp_13" />

                            </FrameLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/superbonus_icon"
                                android:scaleX="0.8"
                                android:scaleY="0.8" />

                        </FrameLayout>

                    </LinearLayout>

                </FrameLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/superbonus_shadow" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/superbonus_bottom_frame"
                    android:orientation="vertical"
                    android:padding="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="36dp"
                        android:text="@string/superbonus_activity_info"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:id="@+id/tv_superbonus_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_13" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1"
                            android:background="@color/colorWhite" />

                        <TextView
                            android:id="@+id/tv_superbonus_info_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_11" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1"
                            android:background="@color/colorWhite" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/superbonus_shadow" />

                <Button
                    android:id="@+id/button_superbonus_participate"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="103dp"
                    android:layout_marginRight="103dp"
                    android:background="@drawable/shape_yellow"
                    android:text="@string/superbonus_goto_participate"
                    android:textColor="@color/color_reset"
                    android:textSize="@dimen/sp_20" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/superbonus_shadow_small" />

                <LinearLayout
                    android:id="@+id/lin_superbonus_winner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="103dp"
                    android:layout_marginRight="103dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/button_superbonus_winner"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/shape_yellow"
                        android:text="@string/superbonus_curren_winners"
                        android:textColor="@color/color_reset"
                        android:textSize="@dimen/sp_20" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/superbonus_shadow_small" />
                </LinearLayout>

                <Button
                    android:id="@+id/button_superbonus_pastprize"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="103dp"
                    android:layout_marginRight="103dp"
                    android:background="@drawable/shape_superbonus"
                    android:text="@string/superbonus_past_prize"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_20" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/superbonus_shadow_small" />

                <Button
                    android:id="@+id/button_superbonus_share"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="103dp"
                    android:layout_marginRight="103dp"
                    android:background="@drawable/shape_superbonus"
                    android:text="@string/superbonus_share"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_20" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/superbonus_shadow_small" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</FrameLayout>