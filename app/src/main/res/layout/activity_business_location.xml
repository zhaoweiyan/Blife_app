<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BackgroundTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/base_topbar" />

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bonus_mapview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bonus_location_icon" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorgray" />

            <TextView
                android:id="@+id/tv_bonus_location_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京市恒基中心。。。。。"
                android:textColor="@color/color_reset"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>