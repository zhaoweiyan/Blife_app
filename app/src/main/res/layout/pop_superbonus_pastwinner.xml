<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_dddddd"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:text="@string/superbonus_past_winners"
            android:textColor="@color/color_fea000"
            android:textSize="@dimen/sp_30"
            android:textStyle="italic|bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_main_backround"
            android:minHeight="@dimen/dp127">

            <TextView
                android:id="@+id/tv_superbous_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp127"
                android:layout_gravity="center"
                android:background="@color/color_main_backround"
                android:gravity="center"
                android:text="@string/superbonus_past_winners_empty"
                android:textColor="@color/color_reset"
                android:textSize="@dimen/sp_30" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_superbonus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>

    </LinearLayout>


</FrameLayout>