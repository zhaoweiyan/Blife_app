<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/framelayout_past_winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_write5"
        android:padding="8dp">

        <com.blife.blife_app.tools.view.RoundImageView
            android:id="@+id/roundiv_past_image"
            android:layout_width="136dp"
            android:layout_height="91dp"
            android:scaleType="centerCrop"
            app:radius="5dp"
            app:type="round" />

        <FrameLayout
            android:layout_width="136dp"
            android:layout_height="91dp"
            android:background="@drawable/shape_alpha_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_past_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:maxWidth="116dp"
                    android:singleLine="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_item_past_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxWidth="136dp"
                    android:singleLine="true"
                    android:textColor="@color/color_d5d3d3"
                    android:textSize="@dimen/sp_11" />

            </LinearLayout>
        </FrameLayout>

    </FrameLayout>

</FrameLayout>